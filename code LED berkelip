int LEDpin = 13; //Declaration Pin digital 13 sebagai LEDpin
void setup() {
pinMode(LEDpin, OUTPUT); // Permulaan(initialize) LEDpin sebagai output
}

// Function loop ini menjadikan proses didalamnya berlaku sampai bila-bila
void loop() {
  digitalWrite(LEDpin, HIGH);   // LED pada Pin 13 akan menyala ketika berada dalam keadan HIGH voltage level
  delay(1000);                       //LED menyala untuk satu saat
  digitalWrite(LEDpin, LOW);    // LED pada Pin 13 akan terpadam ketika berada dalam keadaan LOW voltage level
  delay(1000);                       //LED pada Pin 13 akan terpadam untuk satu saat
}
